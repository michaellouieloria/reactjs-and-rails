<li class="<%= 'active' if current_page?(posts_path) %>"><%= link_to "Posts", posts_path %></li>
<li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "About", about_path %></li>
<li class="<%= 'active' if current_page?(contact_path) %>"><%= link_to "Contact", contact_path %></li>
<% if !user_signed_in? %>
  <li class="<%= 'active' if current_page?(new_user_session_path) %>"><%= link_to "Sign in", new_user_session_path %></li>
<% else %>
  <% if current_user.admin? %>
    <li class="<%= 'active' if current_page?(admin_root_path) %>"><%= link_to "Admin", admin_root_path %></li>
  <% end %>

  <li><%= link_to "Sign out", destroy_user_session_path, data:{method: :delete} %></li>
<% end %>
